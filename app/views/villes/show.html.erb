<p id="notice"><%= notice %></p>

<h1>
  <%= @ville.nom %>
  <% if @weatherIconName %>
   <i class="wi wi-forecast-io-<%= @weatherIconName %>"></i>
  <% end %>
</h1>
  

<p>
  <strong>Latitude:</strong>
  <%= @ville.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @ville.longitude %>
</p>

<p>
  <strong>Weather :</strong>
    <% if @weatherSummary %>
      <%= @weatherSummary %>
    <% else %>
      Unavailable
    <% end %>
</p>


<p>
  <strong>Temperature :</strong>
  <% if @weatherTemperature %>
    <span class="<%= @temperatureColor %>">
      <%= '%.2f' % @weatherTemperature %> &deg;C
    </span>
  <% else %>
  Unavailable
  <% end %>
</p>

<%= link_to 'Edit', edit_ville_path(@ville) %> |
<%= link_to 'Back', villes_path %>
